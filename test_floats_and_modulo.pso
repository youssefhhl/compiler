ALGORITHME TestFloatAndModulo

VARIABLES
    x: ENTIER
    y: ENTIER
    pi: REEL
    radius: REEL
    result: REEL

DEBUT
    x <- 17
    y <- 5
    ECRIRE("x = ", x, ", y = ", y)
    ECRIRE("x % y = ", (x % y))

    pi <- 3.14
    radius <- 2.5
    ECRIRE("pi = ", pi, ", radius = ", radius)
    ECRIRE("pi + radius = ", (pi + radius))
    ECRIRE("pi - radius = ", (pi - radius))
    ECRIRE("pi * radius = ", (pi * radius))
    ECRIRE("pi / radius = ", (pi / radius))

    result <- (x + pi)
    ECRIRE("x + pi = ", result)

    result <- (y * radius)
    ECRIRE("y * radius = ", result)

    SI (pi > radius) ALORS
        ECRIRE("pi est plus grand que radius")
    FINSI

    SI (pi == 3.14) ALORS
        ECRIRE("pi est exactement 3.14")
    FINSI

    ECRIRE("20 % 3 = ", (20 % 3))
    ECRIRE("10 % 4 = ", (10 % 4))
    ECRIRE("7 % 7 = ", (7 % 7))

FIN
