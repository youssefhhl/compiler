ALGORITHME TestForLoop

VARIABLES
    i: ENTIER
    sum: ENTIER
    product: ENTIER
    message: TEXTE

DEBUT
    // Test 1: Simple for loop with counting
    ECRIRE("Numbers from 1 to 5:")
    POUR i DE 1 A 5 FAIRE
        ECRIRE("i = ", i)
    FINPOUR

    // Test 2: Sum of 1 to 10
    sum <- 0
    POUR i DE 1 A 10 FAIRE
        sum <- (sum + i)
    FINPOUR
    ECRIRE("Sum of 1 to 10: ", sum)

    // Test 3: Factorial of 5
    product <- 1
    POUR i DE 1 A 5 FAIRE
        product <- (product * i)
    FINPOUR
    ECRIRE("Factorial of 5: ", product)

    // Test 4: Loop with expressions in bounds
    ECRIRE("Counting by 2s (0 to 8):")
    POUR i DE 0 A 4 FAIRE
        ECRIRE((i * 2))
    FINPOUR

FIN
