ALGORITHME TestForAdvanced

VARIABLES
    i: ENTIER
    j: ENTIER
    sum: ENTIER
    avg: REEL
    counter: ENTIER

DEBUT
    // Test 1: Nested FOR loops (multiplication table)
    ECRIRE("Multiplication Table (2x2):")
    POUR i DE 1 A 3 FAIRE
        POUR j DE 1 A 3 FAIRE
            ECRIRE((i * j), " ")
        FINPOUR
        ECRIRE("")
    FINPOUR

    // Test 2: FOR loop with conditional
    ECRIRE("Numbers divisible by 3 (1-20):")
    POUR i DE 1 A 20 FAIRE
        SI ((i % 3) == 0) ALORS
            ECRIRE(i)
        FINSI
    FINPOUR

    // Test 3: Counting evens and odds
    sum <- 0
    counter <- 0
    POUR i DE 1 A 10 FAIRE
        sum <- (sum + i)
        SI (i > 5) ALORS
            counter <- (counter + 1)
        FINSI
    FINPOUR
    ECRIRE("Sum of 1-10: ", sum)
    ECRIRE("Numbers greater than 5: ", counter)

    // Test 4: FOR loop with floating-point arithmetic
    avg <- 0.0
    POUR i DE 1 A 5 FAIRE
        avg <- (avg + i)
    FINPOUR
    ECRIRE("Average of 1-5: ", (avg / 5))

FIN
