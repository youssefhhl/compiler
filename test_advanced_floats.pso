ALGORITHME TestAdvancedFloats

VARIABLES
    pi: REEL
    radius: ENTIER
    area: REEL
    divisor: ENTIER
    remainder: ENTIER
    value1: REEL
    neg_value: ENTIER

DEBUT
    // Test 1: Basic float operations
    pi <- 3.14159
    radius <- 5
    area <- (pi * radius * radius)
    ECRIRE("Circle with radius ", radius, " has area: ", area)

    // Test 2: Modulo with various numbers
    divisor <- 7
    remainder <- (100 % divisor)
    ECRIRE("100 % 7 = ", remainder)

    // Test 3: Mix ENTIER and REEL in expressions
    value1 <- (radius * 2.5)
    ECRIRE("5 * 2.5 = ", value1)

    // Test 4: Comparison with floats
    SI (pi > 3.0) ALORS
        ECRIRE("pi is greater than 3")
    FINSI

    SI (pi < 3.2) ALORS
        ECRIRE("pi is less than 3.2")
    FINSI

    // Test 5: Division and modulo together
    ECRIRE("23 / 5 = ", (23 / 5))
    ECRIRE("23 % 5 = ", (23 % 5))

    // Test 6: More modulo tests
    ECRIRE("15 % 4 = ", (15 % 4))
    ECRIRE("8 % 3 = ", (8 % 3))

FIN
